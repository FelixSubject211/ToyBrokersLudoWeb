# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.game()
GET     /possibleMoves              controllers.HomeController.getPossibleMoves()
GET     /saveGames                  controllers.HomeController.getSaveGames()
PATCH   /dice                       controllers.HomeController.dice()
PATCH   /move/:index                controllers.HomeController.move(index: Int)
PATCH   /undo                       controllers.HomeController.undo()
PATCH   /redo                       controllers.HomeController.redo()
PATCH   /load/:path                 controllers.HomeController.load(path: String)
PATCH   /save/:path                 controllers.HomeController.save(path: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
