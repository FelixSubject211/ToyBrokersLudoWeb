# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET   /                           controllers.HomeController.game()
GET   /possibleMoves              controllers.HomeController.getPossibleMoves()
GET   /saveGames                  controllers.HomeController.getSaveGames()
GET   /dice                       controllers.HomeController.dice()
GET   /move/:index                controllers.HomeController.move(index: Int)
GET   /undo                       controllers.HomeController.undo()
GET   /redo                       controllers.HomeController.redo()
GET   /load/:path                 controllers.HomeController.load(path: String)
GET   /save/:path                 controllers.HomeController.save(path: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
